<div class="jumbotron text-center">
  <h1>Contact Page</h1>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="form-group">
      {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
    <div class="form-group">
      {{textarea value=model.message class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7"}}
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-lg btn-block" {{action "saveContact" model}}>Send message</button>
    </div>
  </div>

  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
</div>
